{
  "name": "keycloak-react",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && npm run copy-python && npm run copy-dotnet && npm run copy-java",
    "copy-dotnet": "rimraf ../dotnet/KeyCloak/wwwroot/* &&  copyfiles -u 1 build/**/*.* ../dotnet/KeyCloak/wwwroot",
    "copy-python": "rimraf ../python/wwwroot/* &&  copyfiles -u 1 build/**/*.* ../python/wwwroot",
    "copy-java": "rimraf ../java/src/main/resources/wwwroot/* &&  copyfiles -u 1 build/**/*.* ../java/src/main/resources/wwwroot"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "rimraf": "^2.6.3"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
